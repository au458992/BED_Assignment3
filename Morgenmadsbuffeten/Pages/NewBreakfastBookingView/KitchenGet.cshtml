@page
@model Morgenmadsbuffeten.Pages.BreakfastBookingView.KitchenGetModel

@{
    ViewData["Title"] = "Kitchen stuff";
}

<h1>Get info here kitchen peiple</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.Display("TotalGuests")
        </th>

        <th>
            @Html.DisplayNameFor(model => model.BreakfastBooking[0].Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreakfastBooking[0].AdultsCheckedIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreakfastBooking[0].ChildrenCheckedIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreakfastBooking[0].RoomBooking)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BreakfastBooking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdultsCheckedIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChildrenCheckedIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomBooking.RoomNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BreakfastBookingId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BreakfastBookingId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BreakfastBookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
